<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="AppStartWithMenuTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/welcome_has_menu</item>
        <item name="android:windowAnimationStyle">@style/Animations.WelActivityAnimation</item>
    </style>

    <style name="AppStartWithOutMenuTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/welcome_no_menu</item>
        <item name="android:windowAnimationStyle">@style/Animations.WelActivityAnimation</item>
    </style>

    <!-- *************************** base *************************** -->

    <style name="AppMainTheme" parent="@style/AppTheme">
        <item name="android:windowAnimationStyle">@style/Animations.MainActivityAnimation</item>
    </style>

    <style name="Animations.WelActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/self</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/self</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_fade_out</item>
    </style>

    <style name="Animations.MainActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/self</item>
        <item name="android:activityCloseEnterAnimation">@anim/self</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

</resources>
