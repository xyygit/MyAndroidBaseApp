<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white">

    <android.support.v4.view.ViewPager
        android:id="@+id/welcomePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <com.yann.demo.home.view.BannerIndicatorView
        android:id="@+id/welcomeIndicator"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        view:cell_side_length="12dp"
        view:cell_padding="3dp"
        view:normal="@drawable/shape_welcome_indicator_dot_normal"
        view:focused="@drawable/shape_welcome_indicator_dot_focus"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp"/>

</FrameLayout>