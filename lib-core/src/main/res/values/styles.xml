<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:windowAnimationStyle">@style/Animations.ActivityAnimation</item>
    </style>

    <style name="Animations.ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/scale_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/scale_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="OverflowMenu" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">40dip</item>
    </style>

</resources>
